title: $:/plugins/linonetwo/workflow-editor/ui/PageLayout/SwitchWorkflowModal
subtitle: <<lingo SwitchBoardTiddler $:/plugins/linonetwo/workflow-editor/language/>>
mask-closable: yes

<div class="workflow-editor-layout-switch-board-modal-container">

	<!-- default to recently used workflow tiddler -->
	<$select
    tiddler="$:/state/Workflow/PageLayout/focusedTiddler"
    default={{$:/state/Workflow/PageLayout/focusedTiddler}}
    actions='<$action-sendmessage $message="tm-close-tiddler"/>'
  >
		<$list filter='[all[shadows+tiddlers]field:type[application/bpmn+xml]sort[modified]] -[[$:/plugins/linonetwo/workflow-editor/examples/WorkflowTutorial.bpmn]]'>
			<option value=<<currentTiddler>>>
				<$transclude field="caption">
					<$view field="title"/>
				</$transclude>
			</option>
		</$list>
	</$select>

</div>